<?xml version="1.0" encoding="UTF-8"?>

<!-- 更新履歴 -->
<!--
  2016/07/01 - 初版
 -->
<map proto="1.3.5">
  <!-- マップ名 -->
  <name>End CP 2</name>
  <!-- バージョン -->
  <version>1.0.0</version>
  <!-- 目標 -->
  <objective>Capture the Control Point!!</objective>

  <!-- 製作者 -->
  <authors>
    <!-- hayatarou_ -->
    <author uuid="c65b1558-6410-4da7-9aef-cff42a2c1399"/>
  </authors>

  <!-- チーム -->
  <teams>
    <team color="red" id="red" max="16">Red Team</team>
    <team color="blue" id="blue" max="16">Blue Team</team>
  </teams>

  <!-- キット -->
  <kits>
    <kit id="spawn">
      <item slot="0">stone_sword</item>
      <item amount="1" slot="1">fishing_rod</item>
      <item slot="2">diamond_pickaxe</item>
      <item amount="1" slot="4">tnt</item>
      <item amount="2" slot="6">golden_apple</item>
      <item amount="16" slot="7">bread</item>
      <item amount="32" slot="8">quartz_block</item>
      <chestplate bind="true">chainmail chestplate</chestplate>
      <leggings bind="true">chainmail leggings</leggings>
      <boots bind="true">chainmail boots</boots>
      <potion amplifier="100" duration="6">damage_resistance</potion>
      <potion amplifier="100" duration="6">regeneration</potion>
    </kit>

    <kit id="red" parents="spawn">
      <helmet bind="true" color="FF5555">leather helmet</helmet>
    </kit>

    <kit id="blue" parents="spawn">
      <helmet bind="true" color="5555FF">leather helmet</helmet>
    </kit>
  </kits>

  <!-- アイテム削除 -->
  <itemremove>
    <item>bread</item>
    <item>stone_sword</item>
    <item>diamond_pickaxe</item>
    <item>fishing_rod</item>
    <item>leather_helmet</item>
    <item>chainmail_chestplate</item>
    <item>chainmail_leggings</item>
    <item>chainmail_boots</item>
    <item>quartz_block</item>
    <item>golden_apple</item>
    <item>tnt</item>
  </itemremove>

  <!-- キル報酬 -->
  <killreward>
    <item amount="1">golden_apple</item>
    <item amount="1">tnt</item>
  </killreward>

  <!-- スポーン -->
  <spawns>
    <spawn kit="red" team="red" yaw="45">
      <block>37,4,-37</block>
    </spawn>
    <spawn kit="blue" team="blue" yaw="-135">
      <block>-37,4,37</block>
    </spawn>
    <default yaw="-90">
      <block>0,62,0</block>
    </default>
  </spawns>

  <!-- フィルター -->
  <filters>
    <filter id="only_red">
      <team>red</team>
    </filter>

    <filter id="only_blue">
      <team>blue</team>
    </filter>

    <filter id="allow_smooth_brick" parents="deny-blocks">
      <allow>
        <block>quartz_block</block>
        <block>tnt</block>
      </allow>
    </filter>
  </filters>

  <!-- リージョン -->
  <regions>
    <everywhere id="everywhere"/>
    <rectangle id="red_base" max="41,-41" min="26,-26"/>
    <rectangle id="blue_base" max="-41,41" min="-26,26"/>
    <cuboid id="center" max="9,0,-9" min="-9,5,9"/>
    <cuboid id="north" max="2,16,-41" min="-2,23,-37"/>
    <cuboid id="east" max="41,16,2" min="37,23,-2"/>
    <cuboid id="west" max="-41,16,-2" min="-37,23,2"/>
    <cuboid id="south" max="-2,16,41" min="2,23,37"/>
    <rectangle id="void" max="-42,42" min="42,-42"/>

    <negative name="void_negative">
  		<region name="void"/>
  	</negative>

    <union id="cp">
      <region id="center"/>
      <region id="north"/>
      <region id="east"/>
      <region id="west"/>
      <region id="south"/>
    </union>

    <union id="bases">
      <region id="red_base"/>
      <region id="blue_base"/>
    </union>

    <apply block="deny-blocks" message="You can't modify the control point!">
      <region id="cp"/>
    </apply>

    <apply block="deny-blocks" message="You can't modify the base!">
      <region id="bases"/>
    </apply>

    <apply enter="only_red" message="You can't enter the enemy team's spawn!">
      <region id="red_base"/>
    </apply>

    <apply enter="only_blue" message="You can't enter the enemy team's spawn!">
      <region id="blue_base"/>
    </apply>

    <apply block="allow_smooth_brick" message="You can be the placement and destruction of quartz block and tnt!">
      <region id="everywhere"/>
    </apply>

    <apply block="deny-blocks" message="You can't modify the void area!">
      <region id="void_negative"/>
    </apply>
  </regions>

  <controlpoints score-limit="500">
    <controlpoint capture-time="10" id="center" name="Center" score="10">
      <capture>
        <cuboid max="9,0,-9" min="-9,5,9"/>
      </capture>
      <flag>
        <cuboid max="9,0,-9" min="-9,2,9"/>
      </flag>
    </controlpoint>

    <controlpoint capture-time="5" id="north" name="North" score="5">
      <capture>
        <cuboid max="2,16,-41" min="-2,23,-37"/>
      </capture>
      <flag>
        <cuboid max="2,16,-41" min="-2,20,-37"/>
      </flag>
    </controlpoint>

    <controlpoint capture-time="5" id="east" name="East" score="5">
      <capture>
        <cuboid max="41,16,2" min="37,23,-2"/>
      </capture>
      <flag>
        <cuboid max="41,16,2" min="37,20,-2"/>
      </flag>
    </controlpoint>

    <controlpoint capture-time="5" id="west" name="West" score="5">
      <capture>
        <cuboid max="-41,16,-2" min="-37,23,2"/>
      </capture>
      <flag>
        <cuboid max="-41,16,-2" min="-37,20,2"/>
      </flag>
    </controlpoint>

    <controlpoint capture-time="5" id="south" name="South" score="5">
      <capture>
        <cuboid max="-2,16,41" min="2,23,37"/>
      </capture>
      <flag>
        <cuboid max="-2,16,41" min="2,20,37"/>
      </flag>
    </controlpoint>
  </controlpoints>

  <!-- その他設定 -->
  <maxbuildheight>40</maxbuildheight>
  <autorespawn time="2s"/>
  <difficulty>NORMAL</difficulty>

  <disabledamage>
		<damage>fall</damage>
	</disabledamage>

	<tnt>
		<blockdamage>off</blockdamage>
		<instantignite>on</instantignite>
	</tnt>

  <!-- 言語 -->
  <locales>
    <locale lang="ja_JP">
      <string name="You can't modify the control point!" value="コントロールポイントの編集はできません。"/>
      <string name="You can't modify the base!" value="拠点は編集できません。"/>
      <string name="You can't enter the enemy team's spawn!" value="敵チームのスポーンに侵入することはできません。"/>
      <string name="You can't modify the void area!" value="指定範囲以外を編集することはできません。"/>
      <string name="You can be the placement and destruction of smooth brick!" value="滑らかな砂岩とTNTの設置と破壊ができます。"/>
      <string name="Capture the Control Point!" value="コントロールポイントの制圧!"/>
    </locale>
  </locales>
</map>
